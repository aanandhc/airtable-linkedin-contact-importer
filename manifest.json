{
    "name": "Airtable Contact Importer",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Copy the main information of the current LinkedIn profile to a table in Airtable",
    "homepage_url": "http://airtable.com",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/jquery/jquery.js",
            "src/background/airtable-api-client.js",
            "src/background/icon-manager.js",
            "src/background/background.js"
        ],
        "persistent": false
    },
    "options_page": "src/options_custom/index.html",
    "page_action": {},
    "permissions": [
        "contentSettings",
        "https://api.airtable.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "js/jquery/jquery.js",
                "js/artoo.chrome.js",
                "src/content/content.js"
            ]
        }
    ]
}